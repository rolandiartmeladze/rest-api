doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/styles.css')
  body
    h1 Create New User 
        h3 Back Home 
            a(href=`/`, target='_self') index


div(class='creat')
  form(action='/api/create', method='post')
    label First Name:
      input(name='firstName', placeholder='First Name', type='text', required)
    label Last Name:
      input(name='lastName', placeholder='Last Name', type='text', required)
    label Your Email:
      input(name='email', placeholder='Email', type='email', required)
    label Avatar URL:
      input(name='avatarPath', placeholder='Avatar URL', type='file')
    button(type='submit') Create User